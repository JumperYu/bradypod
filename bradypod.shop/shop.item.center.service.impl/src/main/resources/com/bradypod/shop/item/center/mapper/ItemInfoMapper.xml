<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.bradypod.shop.item.center.mapper.ItemInfoMapper">
	
	<!-- 
	<resultMap id="ItemInfo" type="com.bradypod.shop.item.center.po.ItemInfo">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="itemType" column="item_type"/>
        <result property="ctgId" column="ctg_id"/>
        <result property="title" column="title"/>
        <result property="picUrlList" column="pic_url_list"/>
        <result property="description" column="description"/>
        <result property="attriJson" column="attri_json"/>
        <result property="price" column="price"/>
        <result property="status" column="status"/>
        <result property="approvalTime" column="approval_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
	</resultMap>
	 -->
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="select_columns">
	    <![CDATA[
		id,user_id,item_type,ctg_id,title,pic_url_list,description,attri_json,price,status,approval_time,create_time,update_time
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_item_info (
        	id ,
        	user_id ,
        	item_type ,
        	ctg_id ,
        	title ,
        	pic_url_list ,
        	description ,
        	attri_json ,
        	price ,
        	status ,
        	approval_time ,
        	create_time ,
        	update_time 
        ) VALUES (
        	#{id} ,
        	#{userId} ,
        	#{itemType} ,
        	#{ctgId} ,
        	#{title} ,
        	#{picUrlList} ,
        	#{description} ,
        	#{attriJson} ,
        	#{price} ,
        	#{status} ,
        	#{approvalTime} ,
        	#{createTime} ,
        	#{updateTime} 
        )
    ]]>
	</insert>
    
	<update id="update" >
    <![CDATA[
        UPDATE t_item_info SET
	        user_id = #{userId} ,
	        item_type = #{itemType} ,
	        ctg_id = #{ctgId} ,
	        title = #{title} ,
	        pic_url_list = #{picUrlList} ,
	        description = #{description} ,
	        attri_json = #{attriJson} ,
	        price = #{price} ,
	        status = #{status} ,
	        approval_time = #{approvalTime} ,
	        create_time = #{createTime} ,
	        update_time = #{updateTime} 
        WHERE 
	        id = #{id} 
    ]]>
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM t_item_info WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="get" resultType="ItemInfo">
		SELECT <include refid="select_columns" />
	    <![CDATA[
		    FROM t_item_info 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>
	
	<sql id="find_where">
		<!-- ognl访问静态方法的表达式 为@class@method(args) -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND id = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(userId)">
				AND user_id = #{userId}
			</if>
	       <if test="@Ognl@isNotEmpty(itemType)">
				AND item_type = #{itemType}
			</if>
	       <if test="@Ognl@isNotEmpty(ctgId)">
				AND ctg_id = #{ctgId}
			</if>
	       <if test="@Ognl@isNotEmpty(title)">
				AND title = #{title}
			</if>
	       <if test="@Ognl@isNotEmpty(picUrlList)">
				AND pic_url_list = #{picUrlList}
			</if>
	       <if test="@Ognl@isNotEmpty(description)">
				AND description = #{description}
			</if>
	       <if test="@Ognl@isNotEmpty(attriJson)">
				AND attri_json = #{attriJson}
			</if>
	       <if test="@Ognl@isNotEmpty(price)">
				AND price = #{price}
			</if>
	       <if test="@Ognl@isNotEmpty(status)">
				AND status = #{status}
			</if>
	       <if test="@Ognl@isNotEmpty(approvalTimeBegin)">
				AND approval_time >= #{approvalTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(approvalTimeEnd)">
				AND approval_time &lt;= #{approvalTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(createTimeBegin)">
				AND create_time >= #{createTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(createTimeEnd)">
				AND create_time &lt;= #{createTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(updateTimeBegin)">
				AND update_time >= #{updateTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(updateTimeEnd)">
				AND update_time &lt;= #{updateTimeEnd}
		   </if>
		</where>
	</sql>
	
	<sql id="pageLimit">
		limit #{pageNO}, #{pageSize} 
	</sql>
	
    <select id="countData" resultType="long">
        SELECT count(1) FROM t_item_info 
		<include refid="find_where"/>    
    </select>
    
    <select id="listData" resultType="ItemInfo">
    	SELECT <include refid="select_columns" />
	    FROM t_item_info 
		<!-- <include refid="find_where"/> -->
		<if test="@Ognl@isNotEmpty(sort) == true">
		ORDER BY ${sort}
		</if>
		<include refid="pageLimit"/>
    </select>
	
</mapper>
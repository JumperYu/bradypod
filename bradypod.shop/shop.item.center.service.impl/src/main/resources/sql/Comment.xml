<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bradypod.shop.item.center.mapper.CommentMapper">

	<!-- 获取一个实体 -->
	<select id="get" parameterType="com.bradypod.shop.item.center.mapper.CommentMapper"
		resultType="com.bradypod.shop.item.center.mapper.CommentMapper">
		select
		id, depth, parent_id, order_num, name, nick_name, description,
		status,
		create_time,
		update_time
		from t_ctg_info
		<where>
			id = #{id}
		</where>
	</select>

	<!-- 获取全部实体 -->
	<select id="getAll" parameterType="com.bradypod.shop.item.center.mapper.CommentMapper"
		resultType="com.bradypod.shop.item.center.mapper.CommentMapper">
		select
		id, depth, parent_id, order_num, name, nick_name,
		description, status,
		create_time, update_time
		from t_ctg_info
		where
		status =
		#{status}
		order by depth, order_num, id ASC
	</select>

	<!-- 获取全部父节点 -->
	<select id="getAllParentId" resultType="Long">
		select parent_id from
		t_ctg_info
		group by parent_id
		order by parent_id ASC
	</select>

	<!-- 查找实体信息 -->
	<select id="listData" parameterType="Map" resultType="com.bradypod.shop.item.center.mapper.CommentMapper">
		select
		id, depth, parent_id, order_num, name, nick_name,
		description,
		status,
		create_time, update_time
		from t_ctg_info
		<where>
			<if test="pid != null">
				and parent_id = #{pid}
			</if>
			<if test="depth != null">
				and depth = #{depth}
			</if>
		</where>
		order by depth, order_num, id ASC
		limit #{pageNO}, #{pageSize}
	</select>

	<!-- 查找实体信息 -->
	<select id="countData" parameterType="Map" resultType="int">
		select count(1) from t_ctg_info
		<where>
			<if test="pid != null">
				and parent_id = #{pid}
			</if>
			<if test="depth != null">
				and depth = #{depth}
			</if>
		</where>
	</select>

	<!-- 保存一个实体 -->
	<insert id="save" parameterType="com.bradypod.shop.item.center.mapper.CommentMapper"
		useGeneratedKeys="true" keyProperty="id">
		insert t_ctg_info
		(depth,parent_id,order_num,name,nick_name,description,status,create_time)
		values(#{depth},#{parentId},#{orderNum},#{name},#{nickName},#{description},#{status},#{createTime})
	</insert>

	<!-- 更新一个实体 -->
	<update id="update" parameterType="com.bradypod.shop.item.center.mapper.CommentMapper">
		update t_ctg_info
		<set>
			<if test="orderNum != null">
				order_num = #{orderNum},
			</if>
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="nickName != null and nickName !='' ">
				nick_name = #{nickName},
			</if>
			<if test="description != null and description != ''">
				description = #{description},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
		</set>
		<where>
			id = #{id}
		</where>
	</update>

	<!-- 删除一个实体 -->
	<delete id="delete" parameterType="com.bradypod.shop.item.center.mapper.CommentMapper">
		delete from t_ctg_info
		<where>
			1 = 1
		</where>
	</delete>

</mapper>